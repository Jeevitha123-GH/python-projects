def kerala():
    print(" kerala package is 6 k per person")
    var=input(" do you want to book this package: ")
    if var == "yes":
        per_person=6000
        fullname=input("enter you full name: ")
        age=int(input("enter your age:"))
        number_of_persons=int(input("enter number of persons: "))
        total_amount=per_person*number_of_persons
        print(f" hi {fullname} you're booked kerala trip and you have to pay total amount is {total_amount}")
    else:
        print("thank you")

def srisailam():
