def pondicherry():
    print(" pondicherry package 12 k per person")
    var=input(" do you want to book this package: ")
    if var == "yes":
        per_person=12000
        fullname=input("enter you full name: ")
        age=int(input("enter your age:"))
        number_of_persons=int(input("enter number of persons: "))
        total_amount=per_person*number_of_persons
        print(f" hi {fullname} you're booked pondicherry trip and you have to pay total amount is {total_amount}")
    else:
        print("thank you")


def main():
    print("***welcome python tours and travels***")
    print("1.kerala")
    print("2.srisailam")
    print("3.ooty")
    print("4.pondicherry")
    choose_number=int(input("enter your choise: "))
    if choose_number == 1:
        kerala()
    elif choose_number == 2:
        srisailam()
    elif choose_number == 3:
        ooty()
    elif choose_number == 4:
        pondicherry()
    else:
        print("invalid choice")
main()
